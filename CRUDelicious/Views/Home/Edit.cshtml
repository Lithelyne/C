@model Dish

    <a asp-controller="Home" asp-action="Index">Home</a> || <a asp-controller="Home" asp-action="NewDish">Create New Post</a>

<div class="container w-75 mx-auto">
    <h2 class="text-center">New Dish</h2>

    <form
    class="shadow p-3 rounded"
    asp-controller="Home"
    asp-action="UpdateDish"
    asp-route-postID="@Model.PostID"
    method="POST"
    >
    <div class="mb-3">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger font-weight-bold">           
        </span>
        <input class="form-control" asp-for="Name" value="@Model.Name">
    </div>

    <div class="mb-3">
        <label asp-for="Chef"></label>
        <span asp-validation-for="Chef" class="text-danger font-weight-bold">           
        </span>
        <input class="form-control" asp-for="Chef" value="@Model.Chef">
    </div>

    <div class="mb-3">
            <label asp-for="Tastiness">Tastiness</label>
            <span asp-validation-for="Tastiness"></span>
            <select class="form-control w-70" asp-for="Tastiness" value="@Model.Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    
    <div class="mb-3">
        <label asp-for="Calories"></label>
        <span asp-validation-for="Calories" class="text-danger font-weight-bold">           
        </span>
        <input class="form-control" asp-for="Calories" value="@Model.Name">
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger font-weight-bold">           
        </span>
        <input class="form-control" asp-for="Description" value="@Model.Description">
    </div>

    <input type="submit" value="Submit" class="btn btn-primary rounded-pill">



    </form>
</div>