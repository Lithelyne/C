@model User

<h3 class="text-center">Register</h3>
<hr />

<form asp-controller="Home" asp-action="register" method="POST">
    <div class="mb-3">
        <label asp-for="FirstName">First Name</label>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        <input asp-for="FirstName" class="form-control" />
    </div>
    
    <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PasswordConfirm">Confirm Password</label>
        <span asp-validation-for="PasswordConfirm" class="text-danger font-weight-bold"></span>
        <input asp-for="PasswordConfirm" class="form-control" />
    </div>

    <button class="btn btn-outline-primary">Register</button>

</form>