@model List<Product>

<div class="text-center" style="border: 5px solid;">
  <div class="container">
    <h1 class="text-center">All Products</h1>
    <table class="table">
      <tbody>
        @foreach (Product? product in Model)
        {
          <tr>
            <td><a href="products/@product.ProductId">@product.Name</a></td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
